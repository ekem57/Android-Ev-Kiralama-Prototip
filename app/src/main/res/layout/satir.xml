<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/satirimageview"
        android:layout_width="150dp"
        android:layout_height="200dp"

        android:layout_margin="@dimen/_10dp"
        android:scaleType="fitXY" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/baslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/baslik"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip"
            android:textSize="20sp"

            />
        <TextView
            android:id="@+id/kat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kat"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/_10dp"
            />


        <TextView
            android:id="@+id/satirodasayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25dp"
            android:textSize="20sp"
            android:text="Oda"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/metrekare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:text="40"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/metrelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m²"
                android:textSize="17sp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_height="wrap_content">



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/_10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/isitmalabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isıtma:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/isitma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Doğalgaz"
        />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/balkonlumulabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balkon:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/balkonlumu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="40"
                />

        </LinearLayout>





    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/turlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kiralamatürü2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="40"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/adreslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adres:"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/_5dp"
                android:text="ADRESİ BİLGİLERİ BURAYA GELECEK"

                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/iL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25dp"
            android:text="İL"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/satirilce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25dp"
            android:text="İLÇE"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_110dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/paralabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="@dimen/_5dp"
            android:text="40"
            />

        <TextView
            android:id="@+id/tllabeldsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:textSize="17sp"
            android:text="TL" />
    </LinearLayout>


</LinearLayout>




</LinearLayout>